@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collaborative Presentation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">  
    <link href="~/css/presentationhub.css" rel="stylesheet"/>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Panel: Slides -->
            <div class="col-2 bg-light" id="slides">
                <h5 class="mt-2">Slides</h5>
                <ul id="slidesList" class="list-group">
                    <!-- Dynamically populate slides -->
                </ul>
                <button id="addSlideBtn" class="btn btn-primary mt-3">Add Slide</button>
            </div>

            <!-- Main Panel: Editor Area -->
            <div class="col-8" id="editorArea">
                <div id="activeSlide" class="w-100 h-100">
                    <!-- Dynamically populated slide content -->
                </div>
            </div>

            <!-- Right Panel: Users -->
            <div class="col-2 bg-light" id="users">
                <h5 class="mt-2">Users</h5>
                <ul id="userList" class="list-group">
                    <!-- Dynamically populate users -->
                </ul>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/signalr/7.0.0/signalr.min.js"></script>
    <script src="~/js/presentationhub.js"></script>
</body>
</html>
